@model List<MyMongoProjecktNight.Dtos.CustomerDtos.ResultCustomerDto>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <h2 class="mt-4">Müşteri Listesi</h2>
    <table class="table table-striped table-bordered mt-4">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad</th>
                <th>Soyad</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int counter = 1;
                foreach (var customer in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@customer.CustomerName</td>
                        <td>@customer.CustomerSurname</td>
                        
                        <td>
                            <a asp-action="CustomerDetails" asp-route-id="@customer.CustomerId" class="btn btn-primary btn-sm">Detay</a>
                            <a asp-action="UpdateCustomer" asp-route-id="@customer.CustomerId" class="btn btn-warning btn-sm">Düzenle</a>
                            <form asp-action="DeleteCustomer" asp-route-id="@customer.CustomerId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                            </form>
                        </td>
                    </tr>
                    counter++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Müşteri bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

