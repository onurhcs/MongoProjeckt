@model IEnumerable<MyMongoProjecktNight.Dtos.DepartmentDtos.ResultDepartmentDto>

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Departman Listesi</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Departman Listesi</h2>
        <a asp-action="CreateDepartment" class="btn btn-success mb-3">Yeni Departman Ekle</a>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int counter = 1;
                    foreach (var department in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@department.DepartmentName</td>
                            <td>
                                <a asp-action="UpdateDepartment" asp-route-id="@department.DepartmentId" class="btn btn-warning btn-sm">Güncelle</a>
                                <form asp-action="DeleteDepartment" asp-route-id="@department.DepartmentId" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                                <a asp-action="DepartmentDetails" asp-route-id="@department.DepartmentId" class="btn btn-primary btn-sm">Detay</a>
                            </td>
                        </tr>
                        counter++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">Hiç departman bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
